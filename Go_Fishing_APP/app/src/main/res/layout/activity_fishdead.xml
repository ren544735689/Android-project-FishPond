<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:src="@drawable/back" />

        <ImageView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/title"/>
        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/coinSumBackground"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/shape_textview"
                android:gravity="center"
                android:text="TEST"
                android:textSize="20sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/coin"/>
            <TextView
                android:id="@+id/coinSum"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="38dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@null"
                android:gravity="center"
                android:text="9999"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="11sp"
                />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:text="sorry, you don't get any fish this time！"
        />
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/base"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:scaleY="0.6"
            android:scaleX="0.6"
            android:scaleType="centerInside"
            android:src="@drawable/fish_ball_christmas"
            />
        <ImageView
            android:id="@+id/fish"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_alignBottom="@+id/base"
            android:layout_marginBottom="20dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:scaleType="center"
            android:src="@drawable/starburstdead"
            />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
